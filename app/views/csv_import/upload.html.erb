<div class="mb-8 p-6 bg-gray-50 border border-gray-200 rounded-lg shadow-md max-w mx-auto">

  <h2 class="text-2xl font-extrabold text-gray-800 mb-6">Importer un CSV</h2>

  <%= form_with url: import_csv_path, method: :post, local: true, html: { multipart: true }, class: "space-y-6" do |form| %>
    <div>
      <%= form.label :file, "Choisir un fichier", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= form.file_field :file, id: 'file-input', class: "w-full bg-gray-100 border border-gray-300 rounded-lg py-2 px-4 focus:outline-none cursor-pointer hover:bg-gray-200 transition" %>
      <p class="mt-1 text-xs text-gray-500">Format accept√© : CSV</p>
    </div>

    <div>
      <%= form.submit "Importer", class: "w-full bg-blue-600 text-white font-semibold py-2 px-4 rounded hover:bg-blue-700 transition cursor-pointer" %>
    </div>
  <% end %>

</div>
